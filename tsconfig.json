{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "declaration": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "exclude": [
    "**/node_modules",
    "**/__mocks__",
    "**/.tmp",
    "**/dist",
    "**/*.spec.ts"
  ]
}
